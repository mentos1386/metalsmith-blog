doctype html
html
    head
        meta(charset='UTF-8')
        title= title || config.title
        meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')

        link(crossorigin='anonymous' href='/css/normalize.min.css' rel='stylesheet')
        link(id='mainStyle' crossorigin='anonymous' href='/css/mainDark.min.css' rel='stylesheet')

        link(rel='icon' type='img/png' href=config.favicon)

        meta(name='description', content=config.description)
        meta(name='author', content=author ? author.name : config.author)

        // Twitter
        meta(name='twitter:card', content='summary')
        meta(name='twitter:site', content=config.twitter)
        meta(name='twitter:creator', content=author ? author.twitter : config.twitter)
        // Open Graph
        meta(name='og:title', content=title || config.title)
        meta(name='og:description', content=description || config.description)
        meta(name='og:url', content=config.domain + '/' + path)
        meta(name='og:site_name', content=config.title)
        meta(name='og:image', content=leadImage || 'https://www.gravatar.com/avatar/' + config.gravatar + 's=512')
